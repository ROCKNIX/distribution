Requires=waybar.service
After=waybar.service

[Service]
Environment=HOME=/storage
Type=simple
ExecStart=/usr/bin/start_es.sh
WorkingDirectory=/storage
Restart=always
RestartSec=2

[Install]
WantedBy=rocknix.target